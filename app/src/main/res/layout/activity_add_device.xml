<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:fitsSystemWindows="true">

    <com.sevenchip.charger.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimaryDark"
        app:centerMode="title"
        app:centerTitle="@string/title_add_device"
        app:leftDrawable="@mipmap/ic_arrow_back"
        app:rightDrawable="@mipmap/ic_device_list"
        app:titleColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_device_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar"
        app:srcCompat="@mipmap/device_number"/>

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="@string/input_device_id_to_add"
        android:textColor="#938EA2"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar"/>

    <TextView
        android:id="@+id/tv_label_start_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_number"
        android:text="起始ID："
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/et_number"/>

    <EditText
        android:id="@+id/et_number"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn_normal"
        android:digits="0123456789abcdefABCDEF"
        android:maxLength="5"
        android:gravity="center"
        android:hint="@string/input_device_id"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textColorHint="@color/colorRipple"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/tv_label_start_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_device_number"/>

    <TextView
        android:id="@+id/tv_label_start_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:text="添加个数："
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/et_number"/>

    <Spinner
        android:id="@+id/sp_num"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:background="@drawable/btn_normal"
        app:layout_constraintLeft_toRightOf="@id/tv_label_start_num"
        app:layout_constraintTop_toTopOf="@id/tv_label_start_num"
        app:layout_constraintBottom_toBottomOf="@id/tv_label_start_num" />

    <ScrollView
        android:id="@+id/sl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_start_num"
        app:layout_constraintBottom_toTopOf="@id/btn_add"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/tv_ids"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>
    </ScrollView>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_blue_btn"
        android:padding="10dp"
        android:text="@string/add_device"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"/>
</android.support.constraint.ConstraintLayout>